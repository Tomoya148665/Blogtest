---
import { getEditableAttributes } from "@lib/storyblok.js";
import Feature from "@components/practice/Feature.astro";
import type { SbBlokData } from "@storyblok/astro";

const { blok } = Astro.props;

const editableAttributes = await getEditableAttributes(blok);
---

<section
  data-blok-c={(editableAttributes as any)["data-blok-c"]}
  data-blok-uid={(editableAttributes as any)["data-blok-uid"]}
  class:list={["py-36 bg-zinc-100", { storyblok__outline: editableAttributes }]}
>
  <div class="container grid grid-cols-3 gap-12">
    {
      blok.columns?.map((blok: SbBlokData) => {
        return <Feature blok={blok} />;
      })
    }
  </div>
</section>
