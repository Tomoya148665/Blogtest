---

{
  story.content.body?.map((blok: any) => {
    switch (blok.component) {
      case "teaser":
        return <Teaser blok={blok} />;
      case "feature":
        return <Feature blok={blok} />;
      case "grid":
        return <Grid blok={blok} />;
      case "richText":
        return <RichText blok={blok} />;
    }
  })
}
